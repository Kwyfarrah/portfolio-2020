<div class="curtain">
  <div class="curtain__wrapper">
    <input type="checkbox" id="checkbox" onclick="disable(this);">

    <div class="curtain__panel curtain__panel--left">
      <h1>Hi!&nbsp;&nbsp;<h1>
      <h1>I'm Farrah!&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</h1>
    </div> <!-- curtain__panel -->

    <div class="curtain__content">
      <h2>Be Creative in my Reality.</h2>
      <p>Born in Hong Kong, Live in Tokyo.</p>

      <h5>Skill</h5>
        <div class = "cards">
        <% @skills.each do |skill| %>
          <div class = "card">
            <%= skill.title %>
            <%= cl_image_tag skill.photo.key %>
          </div>
          <% end %>
        </div>

      <h5>Work</h5>

    </div>



    <div class="curtain__panel curtain__panel--right">
      <h3>&nbsp;&nbsp;a fullstack developer/ QA / AI Trainer</h3>
    </div> <!-- curtain__panel -->

  </div> <!-- curtain__wrapper -->
</div> <!-- curtain -->
<script>
  function disable(el){
      el.setAttribute('disabled',true);
  }
</script>
